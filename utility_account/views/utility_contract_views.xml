<openerp>
<data>
<record id="utility_contract_view_search" model="ir.ui.view">
    <field name="name">utility.contract form</field>
    <field name="model">utility.contract</field>
    <field name="arch" type="xml">
        <search>
            <field name="name"/>
            <field name="company_id" groups="base.group_multi_company"/>
            <field name="user_id"/>
            <field name="meter_id"/>
            <field name="analytic_account_id"/>
            <field name="partner_id"/>
            <field name="template_id"/>
            <field name="bank_account_id"/>
            <group name="group_state" string="State">
                <filter name="dom_draft" string="Draft" domain="[('state','=','draft')]"/>
                <filter name="dom_confirm" string="Waiting for Approval" domain="[('state','=','confirm')]"/>
                <filter name="dom_approve" string="Ready To Start" domain="[('state','=','approve')]"/>
                <filter name="dom_open" string="In Progress" domain="[('state','=','open')]"/>
                <filter name="dom_done" string="Done" domain="[('state','=','done')]"/>
                <filter name="dom_cancel" string="cancel" domain="[('state','=','cancel')]"/>
            </group>
            <group name="group_main" string="Group By..">
                <filter name="grp_company" string="Company" context="{'group_by':'company_id'}" groups="base.group_multi_company"/>
                <filter name="grp_user" string="Responsible" context="{'group_by':'user_id'}"/>
                <filter name="grp_meter" string="Meter" context="{'group_by':'meter_id'}"/>
                <filter name="grp_account_analytic" string="Analytic Account" context="{'group_by':'analytic_account_id'}"/>
                <filter name="grp_partner" string="Customer" context="{'group_by':'partner_id'}"/>
                <filter name="grp_template" string="Template" context="{'group_by':'template_id'}"/>
                <filter name="grp_date_start_year" string="Date Start by Year" context="{'group_by':'date_start:year'}"/>
                <filter name="grp_date_start_month" string="Date Start by Month" context="{'group_by':'date_start:month'}"/>
                <filter name="grp_date_start_week" string="Date Start by Week" context="{'group_by':'date_start:week'}"/>
                <filter name="grp_date_start_day" string="Date Start by Day" context="{'group_by':'date_start:day'}"/>
                <filter name="grp_date_end_year" string="Date End by Year" context="{'group_by':'date_end:year'}"/>
                <filter name="grp_date_end_month" string="Date End by Month" context="{'group_by':'date_end:month'}"/>
                <filter name="grp_date_end_week" string="Date End by Week" context="{'group_by':'date_end:week'}"/>
                <filter name="grp_date_end_day" string="Date End by Day" context="{'group_by':'date_end:day'}"/>
            </group>
        </search>
    </field>
</record>

<record id="utility_contract_view_tree" model="ir.ui.view">
    <field name="name">utility.contract tree</field>
    <field name="model">utility.contract</field>
    <field name="arch" type="xml">
        <tree>
            <field name="name"/>
            <field name="company_id" groups="base.group_multi_company"/>
            <field name="partner_id"/>
            <field name="meter_id"/>
            <field name="date_start"/>
            <field name="date_end"/>
            <field name="template_id"/>
            <field name="user_id"/>
            <field name="state"/>
        </tree>
    </field>
</record>

<record id="utility_contract_view_form" model="ir.ui.view">
    <field name="name">utility.contract form</field>
    <field name="model">utility.contract</field>
    <field name="arch" type="xml">
        <form>
            <header>
                <button name="action_confirm" type="object" string="Confirm" class="oe_highlight" attrs="{'invisible':['|',('state','!=','draft'),('confirm_ok','=',False)]}" confirm="Confirm contract. Are you sure?"/>
                <button name="action_generate_schedule" type="object" string="Generate Schedule" icon="gtk-execute" attrs="{'invisible':[('state','!=','draft')]}"/>
                <button name="action_approve" type="object" string="Approve" class="oe_highlight" attrs="{'invisible':['|',('state','!=','confirm'),('approve_ok','=',False)]}" confirm="Approve contract. Are you sure?"/>
                <button name="action_start" type="object" string="Start" class="oe_highlight" attrs="{'invisible':['|',('state','!=','approve'),('start_ok','=',False)]}" confirm="Start contract. Are you sure?"/>
                <button name="action_done" type="object" string="Finish" class="oe_highlight" attrs="{'invisible':['|',('state','!=','open'),('done_ok','=',False)]}" confirm="Finish contract. Are you sure?"/>
                <button name="%(base_print_policy.base_print_document_action)d" string="Print" type="action" icon="gtk-print"/>
                <button name="%(base_cancel_reason.base_cancel_reason_wizard_action)d" type="action" string="Cancel" attrs="{'invisible':['|',('state','=','cancel'),('cancel_ok','=',False)]}" confirm="Cancel worksheet. Are you sure?"/>
                <button name="%(base_terminate_reason.base_terminate_reason_wizard_action)d" type="action" string="Terminate" attrs="{'invisible':['|',('state','!=','open'),('terminate_ok','=',False)]}" confirm="Terminate contract. Are you sure?"/>
                <button name="action_restart" type="object" string="Restart" attrs="{'invisible':['|',('state','!=','cancel'),('restart_ok','=',False)]}" confirm="Restart worksheet. Are you sure?"/>
                <field name="state" widget="statusbar" statusbar_visible="draft,confirm,approve,open"/>
            </header>
            <sheet>
                <div class="oe_right oe_button_box" style="width: 300px;" name="buttons">
                </div>
                <div class="oe_left" style="width: 500px;">
                    <div class="oe_title" style="width: 500px;">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <h2 attrs="{'invisible': [('state', '!=', 'cancel')]}">
                            <label for="cancel_reason_id" string="Cancellation reason:"/>
                            <field name="cancel_reason_id" class="oe_inline"/>
                        </h2>
                        <h2 attrs="{'invisible': [('state', '!=', 'terminate')]}">
                            <label for="terminate_reason_id" string="Termination reason:"/>
                            <field name="terminate_reason_id" class="oe_inline"/>
                        </h2>
                    </div>
                </div>
                <group name="group_1" colspan="4" col="2">
                    <group name="group_1_1" colspan="1" col="2">
                        <field name="company_id" groups="base.group_multi_company"/>
                        <field name="template_id"/>
                        <field name="partner_id" domain="[('customer','=',True)]"/>
                        <field name="meter_id" domain="[('partner_id','=',partner_id)]"/>
                        <field name="date_start"/>
                        <field name="date_end"/>
                    </group>
                    <group name="group_1_2">
                        <field name="pricelist_id" domain="[('type','=','utility.contract')]"/>
                        <field name="user_id"/>
                        <field name="analytic_account_id"/>
                    </group>
                </group>
                <notebook colspan="4">
                    <page name="invoice_schedule" string="Invoice Schedule">
                        <group name="invoice_schedule_1" colspan="4" col="2">
                            <field name="first_invoice_date"/>
                            <field name="period"/>
                            <field name="period_number"/>
                            <field name="last_invoice_date"/>
                        </group>
                        <field name="schedule_ids" nolabel="1">
                            <tree>
                                <field name="period_start_date"/>
                                <field name="schedule_date"/>
                                <field name="invoice_id"/>
                                <field name="contract_state" invisible="1"/>
                                <field name="manual"/>
                                <field name="state"/>
                                <button name="action_uncontrol_schedule" string="Uncontrol Schedule" icon="gtk-no" type="object" attrs="{'invisible':['|','|',('invoice_id','!=',False),('manual','=',True),('contract_state','!=','open')]}"/>
                                <button name="action_control_schedule" string="Control Schedule" icon="gtk-yes" type="object" attrs="{'invisible':['|',('manual','=',False),('contract_state','!=','open')]}"/>
                                <button name="action_generate_invoice" string="Generate Invoice" icon="gtk-execute" type="object" attrs="{'invisible':['|',('invoice_id','!=',False),('contract_state','!=','open')]}"/>
                                <button name="%(base_print_policy.base_print_document_action)d" string="Print" type="action" icon="gtk-print"/>
                            </tree>
                        </field>
                    </page>
                    <page name="invoice_item" string="Invoice Item">
                        <group name="invoice_item_1" colspan="4" col="2">
                            <field name="account_receivable_id"/>
                            <field name="journal_id"/>
                            <field name="bank_account_id" domain="[('partner_id.ref_companies','in',[company_id])]"/>
                            <field name="payment_term_id"/>
                        </group>
                        <group name="invoice_item_2" colspan="4" col="2">
                            <field name="invoice_item_ids" colspan="2" nolabel="1" context="{'default_contract_id': active_id}">
                                <tree editable="top">
                                    <field name="contract_id" invisible="1"/>
                                    <field name="allowed_invoice_item_ids" widget="many2many_tags" invisible="1"/>
                                    <field name="sequence" widget="handle"/>
                                    <field name="item_id" domain="[('id','in',allowed_invoice_item_ids[0][2])]"/>
                                    <field name="qty_computation_method"/>
                                    <field name="qty" attrs="{'readonly':[('qty_computation_method','=','automatic')], 'required':[('qty_computation_method','=','manual')]}"/>
                                    <field name="tax_ids" widget="many2many_tags" domain="[('type_tax_use','!=','purchase')]"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                    <page name="note" string="Notes">
                        <field name="note"/>
                    </page>
                    <page name="policy" string="Policies"  groups="base.group_system">
                        <group name="policy_1" colspan="4" col="2">
                            <field name="confirm_ok"/>
                            <field name="approve_ok"/>
                            <field name="start_ok"/>
                            <field name="done_ok"/>
                            <field name="cancel_ok"/>
                            <field name="terminate_ok"/>
                            <field name="restart_ok"/>
                        </group>
                    </page>
                    <page name="log" string="Logs"  groups="base.group_system">
                        <group name="group_5" colspan="4" col="3">
                            <group name="group_log_1" colspan="4" col="3">
                                <field name="confirm_date" string="Confirmation"/>
                                <field name="confirm_user_id" nolabel="1"/>
                                <field name="approve_date" string="Approval"/>
                                <field name="approve_user_id" nolabel="1"/>
                                <field name="start_date" string="Start"/>
                                <field name="start_user_id" nolabel="1"/>
                                <field name="done_date" string="Finish"/>
                                <field name="done_user_id" nolabel="1"/>
                                <field name="cancel_date" string="Cancellation"/>
                                <field name="cancel_user_id" nolabel="1"/>
                            </group>
                        </group>
                    </page>
                </notebook>
            </sheet>
            <div class="oe_chatter">
                <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                <field name="message_ids" widget="mail_thread"/>
            </div>
        </form>
    </field>
</record>

<record id="utility_contract_action" model="ir.actions.act_window">
    <field name="name">Utility Contracts</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">utility.contract</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
</record>

<menuitem
    id="utility_contract_menu"
    name="Utility Contracts"
    parent="utility_contract_root_menu"
    action="utility_contract_action"
    sequence="1"
    />

</data>
</openerp>

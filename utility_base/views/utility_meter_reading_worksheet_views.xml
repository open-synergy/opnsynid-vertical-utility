<openerp>
<data>
<record id="utility_meter_reading_worksheet_view_search" model="ir.ui.view">
    <field name="name">utility.meter_reading_worksheet form</field>
    <field name="model">utility.meter_reading_worksheet</field>
    <field name="arch" type="xml">
        <search>
            <field name="name"/>
            <field name="company_id" groups="base.group_multi_company"/>
            <field name="template_id"/>
            <field name="user_id"/>
            <group name="group_state" string="State">
                <filter name="dom_draft" string="Draft" domain="[('state','=','draft')]"/>
                <filter name="dom_confirm" string="Waiting for Approval" domain="[('state','=','confirm')]"/>
                <filter name="dom_approve" string="Ready To Start" domain="[('state','=','approve')]"/>
                <filter name="dom_open" string="In Progress" domain="[('state','=','open')]"/>
                <filter name="dom_done" string="Done" domain="[('state','=','done')]"/>
                <filter name="dom_cancel" string="cancel" domain="[('state','=','cancel')]"/>
            </group>
            <group name="group_main" string="Group By..">
                <filter name="grp_company" string="Company" context="{'group_by':'company_id'}" groups="base.group_multi_company"/>
                <filter name="grp_template" string="Template" context="{'group_by':'template_id'}"/>
                <filter name="grp_user" string="Responsible" context="{'group_by':'user_id'}"/>
                <filter name="grp_scheduled_date_start_year" string="Scheduled Date Start by Year" context="{'group_by':'scheduled_date_start:year'}"/>
                <filter name="grp_scheduled_date_start_month" string="Scheduled Date Start by Month" context="{'group_by':'scheduled_date_start:month'}"/>
                <filter name="grp_scheduled_date_start_week" string="Scheduled Date Start by Week" context="{'group_by':'scheduled_date_start:week'}"/>
                <filter name="grp_scheduled_date_start_day" string="Scheduled Date Start by Day" context="{'group_by':'scheduled_date_start:day'}"/>
                <filter name="grp_scheduled_date_end_year" string="Scheduled Date End by Year" context="{'group_by':'scheduled_date_end:year'}"/>
                <filter name="grp_scheduled_date_end_month" string="Scheduled Date End by Month" context="{'group_by':'scheduled_date_end:month'}"/>
                <filter name="grp_scheduled_date_end_week" string="Scheduled Date End by Week" context="{'group_by':'scheduled_date_end:week'}"/>
                <filter name="grp_scheduled_date_end_day" string="Scheduled Date End by Day" context="{'group_by':'scheduled_date_end:day'}"/>
                <filter name="grp_real_date_start_year" string="Real Date Start by Year" context="{'group_by':'real_date_start:year'}"/>
                <filter name="grp_real_date_start_month" string="Real Date Start by Month" context="{'group_by':'real_date_start:month'}"/>
                <filter name="grp_real_date_start_week" string="Real Date Start by Week" context="{'group_by':'real_date_start:week'}"/>
                <filter name="grp_real_date_start_day" string="Real Date Start by Day" context="{'group_by':'real_date_start:day'}"/>
                <filter name="grp_real_date_end_year" string="Real Date End by Year" context="{'group_by':'real_date_end:year'}"/>
                <filter name="grp_real_date_end_month" string="Real Date End by Month" context="{'group_by':'real_date_end:month'}"/>
                <filter name="grp_real_date_end_week" string="Real Date End by Week" context="{'group_by':'real_date_end:week'}"/>
                <filter name="grp_real_date_end_day" string="Real Date End by Day" context="{'group_by':'real_date_end:day'}"/>
            </group>
        </search>
    </field>
</record>

<record id="utility_meter_reading_worksheet_view_tree" model="ir.ui.view">
    <field name="name">utility.meter_reading_worksheet tree</field>
    <field name="model">utility.meter_reading_worksheet</field>
    <field name="arch" type="xml">
        <tree>
            <field name="name"/>
            <field name="company_id" groups="base.group_multi_company"/>
            <field name="template_id"/>
            <field name="scheduled_date_start"/>
            <field name="scheduled_date_end"/>
            <field name="real_date_start"/>
            <field name="real_date_end"/>
            <field name="user_id"/>
            <field name="state"/>
        </tree>
    </field>
</record>

<record id="utility_meter_reading_worksheet_view_calendar" model="ir.ui.view">
    <field name="name">utility.meter_reading_worksheet calendar</field>
    <field name="model">utility.meter_reading_worksheet</field>
    <field name="arch" type="xml">
        <calendar date_start="scheduled_date_start" date_stop="scheduled_date_end" color="user_id">
            <field name="name"/>
        </calendar>
    </field>
</record>

<record id="utility_meter_reading_worksheet_view_form" model="ir.ui.view">
    <field name="name">utility.meter_reading_worksheet form</field>
    <field name="model">utility.meter_reading_worksheet</field>
    <field name="arch" type="xml">
        <form>
            <header>
                <button name="action_confirm" type="object" string="Confirm" class="oe_highlight" attrs="{'invisible':['|',('state','!=','draft'),('confirm_ok','=',False)]}" confirm="Confirm worksheet. Are you sure?"/>
                <button name="action_approve" type="object" string="Approve" class="oe_highlight" attrs="{'invisible':['|',('state','!=','confirm'),('approve_ok','=',False)]}" confirm="Approve worksheet. Are you sure?"/>
                <button name="%(utility_meter_reading_worksheet_start_action)d" type="action" string="Start" class="oe_highlight" attrs="{'invisible':['|',('state','!=','approve'),('start_ok','=',False)]}" confirm="Start worksheet. Are you sure?"/>
                <button name="%(utility_meter_reading_worksheet_end_action)d" type="action" string="Finish" class="oe_highlight" attrs="{'invisible':['|',('state','!=','open'),('done_ok','=',False)]}" confirm="Finish worksheet. Are you sure?"/>                
                <button name="%(base_print_policy.base_print_document_action)d" string="Print" type="action" icon="gtk-print"/>
                <button name="%(base_cancel_reason.base_cancel_reason_wizard_action)d" type="action" string="Cancel" attrs="{'invisible':['|',('state','=','cancel'),('cancel_ok','=',False)]}" confirm="Cancel worksheet. Are you sure?"/>
                <button name="action_restart" type="object" string="Restart" attrs="{'invisible':['|',('state','!=','cancel'),('restart_ok','=',False)]}" confirm="Restart worksheet. Are you sure?"/>
                <field name="state" widget="statusbar" statusbar_visible="draft,confirm,approve,open"/>
            </header>
            <sheet>
                <div class="oe_right oe_button_box" style="width: 300px;" name="buttons">
                </div>
                <div class="oe_left" style="width: 500px;">
                    <div class="oe_title" style="width: 500px;">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <h2 attrs="{'invisible': [('state', '!=', 'cancel')]}">
                            <label for="cancel_reason_id" string="Cancellation reason:"/>
                            <field name="cancel_reason_id" class="oe_inline"/>
                        </h2>
                    </div>
                </div>
                <group name="group_1" colspan="4" col="2">
                    <group name="group_1_1" colspan="1" col="2">
                        <field name="company_id" groups="base.group_multi_company"/>
                        <field name="template_id"/>
                        <field name="user_id"/>
                    </group>
                    <group name="group_1_2">
                        <field name="scheduled_date_start"/>
                        <field name="scheduled_date_end"/>
                        <field name="real_date_start"/>
                        <field name="real_date_end"/>
                    </group>
                </group>
                <notebook colspan="4">
                    <page name="meter_reading" string="Meter Readings">
                        <group name="meter_reading_1" colspan="4" col="2">
                            <field name="meter_reading_ids" colspan="4" col="2">
                                <tree editable="top" create="false" edit="true" delete="false">
                                    <field name="name" readonly="1"/>
                                    <field name="meter_id" readonly="1"/>
                                    <field name="date_reading"/>
                                    <field name="amount_reading"/>
                                    <field name="amount_usage"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                    <page name="note" string="Notes">
                        <field name="note"/>
                    </page>
                    <page name="policy" string="Policies"  groups="base.group_system">
                        <group name="policy_1" colspan="4" col="2">
                            <field name="confirm_ok"/>
                            <field name="approve_ok"/>
                            <field name="start_ok"/>
                            <field name="done_ok"/>
                            <field name="cancel_ok"/>
                            <field name="restart_ok"/>
                        </group>
                    </page>
                    <page name="log" string="Logs"  groups="base.group_system">
                        <group name="group_5" colspan="4" col="3">
                            <group name="group_log_1" colspan="4" col="3">
                                <field name="confirm_date" string="Confirmation"/>
                                <field name="confirm_user_id" nolabel="1"/>
                                <field name="approve_date" string="Approval"/>
                                <field name="approve_user_id" nolabel="1"/>
                                <field name="start_date" string="Start"/>
                                <field name="start_user_id" nolabel="1"/>
                                <field name="done_date" string="Finish"/>
                                <field name="done_user_id" nolabel="1"/>
                                <field name="cancel_date" string="Cancellation"/>
                                <field name="cancel_user_id" nolabel="1"/>
                            </group>
                        </group>
                    </page>
                </notebook>
            </sheet>
            <div class="oe_chatter">
                <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                <field name="message_ids" widget="mail_thread"/>
            </div>
        </form>
    </field>
</record>

<record id="utility_meter_reading_worksheet_action" model="ir.actions.act_window">
    <field name="name">Meter Reading Worksheets</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">utility.meter_reading_worksheet</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
</record>

<menuitem
    id="utility_meter_reading_worksheet_menu"
    name="Meter Reading Worksheets"
    parent="utility_meter_reading_root_menu"
    action="utility_meter_reading_worksheet_action"
    sequence="2"
    />

</data>
</openerp>
